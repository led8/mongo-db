<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Url:</strong>
  <%= @post.url %>
</p>

<strong>Reviews:</strong>
<ul>
  <% @post.reviews.each do |review| %>
    <li><%= review.title %> | <%= review.content %></li>
  <% end %>

</ul>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |
<%= link_to 'Add a review', new_post_review_path(@post) %>
